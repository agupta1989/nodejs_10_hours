<div class = "container">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Full Name</th>
      <th>Skills</th>
    </tr>
  </thead>
  <tbody>
    {{#each staff}}
    <tr>
      <td>{{@index}}</td>
      <td>{{firstname}}</td>
      <td>{{lastname}}</td>
      <td>
        <a href="staff/{{_id}}"> {{firstname}} {{lastname}}</a>
      </td>
      <td>{{skills}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
